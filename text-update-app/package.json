  "version": "1.0.0",
  "description": "Text Update Application with Grammar and Rephrasing Features",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "openai",
    "text-processing",
    "grammar-check"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-store": "^8.1.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "sharp": "^0.34.1"
  },
  "build": {
    "appId": "com.textupdate.app",
    "productName": "Text Update App",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
