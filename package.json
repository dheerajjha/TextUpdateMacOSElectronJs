{
  "name": "text-update-app",
  "version": "1.0.0",
  "description": "A clipboard-powered text update app for grammar checking and rephrasing text",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "clipboard",
    "grammar",
    "openai",
    "text",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.electron.text-update-app",
    "productName": "Text Update",
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "assets/Texty.png",
      "darkModeSupport": true
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/Texty.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "text-update-app"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "sharp": "^0.34.1"
  }
} 